{
  "name": "CLARA-SSoT Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "Google.gemini-code-assist",
        "ms-azuretools.vscode-docker",
        "iterative.dvc",
        "GitHub.copilot",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreter": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.terminal.activateEnvironment": true,
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay"
      }
    }
  },
  "postCreateCommand": "sudo apt-get update || true && sudo apt-get install -y libgl1 && pip install pipx && pipx install poetry && poetry install && poetry run pip install \"dulwich<0.21.7\" && pip install dvc[s3,gs,azure,ssh,gdrive] black isort pylint pytest pytest-cov pytest-asyncio pre-commit",
  "remoteUser": "vscode",
  "mounts": [
    "source=clara-ssot-dvc-cache,target=/home/vscode/.dvc/cache,type=volume"
  ],
  "runArgs": [
    "--gpus",
    "all",
    "--network=host",
    "--env-file",
    ".env"
  ],
  "forwardPorts": [
    8000,
    8501
  ]
}